{
  "compilerOptions": {
    "module": "es2022",
    "moduleResolution": "bundler",
    "target": "ES2022",
    "lib": [
      "ES2022"
    ],
    "sourceMap": true,
    "rootDir": "src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": false,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "baseUrl": "src",
    "paths": {
      "@infra/*": [
        "infrastructure/*"
      ],
      "@ext/*": [
        "extension/*"
      ],
      "@features/*": [
        "features/*"
      ],
      "@root/*": [
        "*"
      ],
      "@utils/*": [
        "utils/*"
      ]
    }
  },
  "exclude": [
    "src/archive/**/*"
  ]
}